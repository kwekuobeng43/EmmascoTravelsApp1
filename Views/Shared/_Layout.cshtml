

@using EmmascoTravelsApp1.Data
@inject EmmascoTravelsApp1.Data.AppDbContext db
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmmascoTravelsApp1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EmmascoTravelsApp1.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />
</head>
<body>
    <header>
        <nav class="fixed-top navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">EmmascoTravels</a>
                <button class="navbar-toggler bg-white" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (Context.Session.GetString("username") != null)
                        {
                            var username = Context.Session.GetString("username");
                            var user = db.Users.FirstOrDefault(u => u.Username == username);

                            if (user != null && user.Role == "Admin")
                            {
                                <!-- Admin-only nav -->
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Admin" asp-action="Index">Admin Dashboard</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="UserManagement" asp-action="Index">User Management</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Booking" asp-action="MyBookings">My Bookings</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Tracking" asp-action="AdminViewer">Tracking Management</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Package" asp-action="AdminIndex">Package Management</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Feedback" asp-action="ViewFeedbacks">Feedbacks</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Transaction" asp-action="MyTransactions">Transaction</a>
                                </li>
                                

                            }

                            else
                            {
                                <!-- Normal user nav -->
                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Home" asp-action="Index">Home</a>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-white" href="#" id="customerDropdown" role="button" data-bs-toggle="dropdown">
                                        Customer
                                    </a>
                                    <div class="dropdown-menu">
                                       
                                        <a class="dropdown-item" asp-controller="Home" asp-action="Contact">Give Feedback</a>
                                     
                                    </div>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Package" asp-action="Index">Packages</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-white" asp-controller="Tracking" asp-action="Index">Track Booking</a>
                                </li>

                                

                            }
                        }
                    </ul>

                    <ul class="navbar-nav ms-auto me-5">
                        @if (string.IsNullOrEmpty(Context.Session.GetString("username")))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Registration" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Login" asp-action="Login">Login</a>
                            </li>
                        }
                        else
                        {
                            var username = Context.Session.GetString("username");
                            var user = db.Users.FirstOrDefault(u => u.Username == username);

                            if (user != null)
                            {
                                <li class="nav-item d-flex align-items-center">
                                    <span class="text-white me-2">Role: @user.Role</span>
                                </li>
                            }

                            <li class="nav-item d-flex align-items-center">
                                <a class="text-white me-2 nav-link d-flex align-items-center" asp-controller="Home" asp-action="EditProfile">
                                    <i class="fas fa-user-edit me-2"></i> @Context.Session.GetString("username")
                                </a>
                                <a id="logout-link" class="nav-link text-white" asp-controller="Login" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pt-5 pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-black text-white">
        <div class="container">
            &copy; 2025 - EmmascoTravelsApp - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.getElementById("logout-link")?.addEventListener("click", function (e) {
            e.preventDefault();
            Swal.fire({
                title: 'Are you sure?',
                text: "You will be logged out of the system!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, logout!'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = '@Url.Action("Logout", "Login")';
                }
            })
        });
    </script>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>



