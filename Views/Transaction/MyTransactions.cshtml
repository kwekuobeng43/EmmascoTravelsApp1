@{
}

@model List<EmmascoTravelsApp1.Models.Transaction>

<h2 class="mt-4 mb-4">My Transactions</h2>

<table class="table table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>Package</th>
            <th>Amount</th>
            <th>Payment</th>
            <th>Status</th>
            <th>Date</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.PackageName</td>
                <td>@t.Amount</td>
                <td>@t.PaymentOption</td>
                <td>@t.Status</td>
                <td>@t.TransactionDate</td>
            </tr>
        }
    </tbody>
</table>

