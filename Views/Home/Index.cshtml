<!-- POPULAR TRAVEL PACKAGES (Dynamic) -->
<div class="container py-5 bg-gradient" style="background: linear-gradient(135deg, #f0f4ff, #e8f5e9);">
    <h2 class="text-center mb-5 fw-bold text-primary">Popular Travel Packages</h2>

    <div class="row">
        @foreach (var package in Model)
        {
            <div class="col-md-4 mb-4 mt-4">
                <div class="card shadow-sm border-0">
                    <img src="@Url.Content(package.ImageUrl ?? "~/image1/default.jpg")"
                         alt="@package.Name"
                         class="card-img-top"
                         style="height:190px; object-fit:cover;">

                    <div class="card-body text-center">
                        <h2 class="card-title fs-4 fw-bold">@package.Name</h2>

                        <p class="card-text text-muted">
                            @(package.Description?.Length > 100
                                                    ? package.Description.Substring(0, 100) + "..."
                                                    : package.Description)
                    </p>

                        <p class="card-text fs-5 fw-bold text-success">
                            @package.Price.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("en-US"))
                        </p>

                        <a asp-controller="Booking"
                           asp-action="Create"
                           asp-route-packageId="@package.Id"
                           class="btn btn-outline-primary">
                            Book Now
                        </a>
                        <a asp-controller="Package"
                           asp-action="Details"
                           asp-route-id="@package.Id"
                           class="btn btn-primary ms-2">
                            View Details
                        </a>
                    </div>
                </div>
            </div>
                }
    </div>
</div>






