@{
}



@model IEnumerable<EmmascoTravelsApp1.Models.Booking>

@{
    ViewData["Title"] = "My Bookings";
}





<div class="container mt-4">
    <h2 class="mb-4 text-center fw-bold">Booking Management</h2>
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
            <strong>Success!</strong> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    

    <!-- Search form -->
    <form asp-controller="Booking" asp-action="MyBookings" method="get" class="mb-3">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search by name, email, package, or ID"
                   name="searchString" value="@ViewData["CurrentFilter"]" />
            <button class="btn btn-dark" type="submit">
                <i class="fa fa-search"></i> Search
            </button>
        </div>
    </form>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No bookings found.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Booking ID</th>
                        <th>Customer Name</th>
                        <th>Package</th>
                        <th>Travel Date</th>
                        <th>Arrival Date</th>
                        <th>People</th>
                        <th>Total Price</th>
                        <th>Booked On</th>
                        <th>Payment Option</th>
                        <th>Actions</th>
                        <th>Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in Model)
                    {
                        <tr>
                            <td><span class="badge bg-primary">#@booking.Id</span></td>
                            <td>@booking.CustomerName</td>
                            <td>@booking.Package.Name</td>
                            <td>@booking.TravelDate.ToString("d")</td>
                            <td>@booking.ArrivalDate.ToString("d")</td>
                            <td>@booking.NumberOfPeople</td>
                            <td>@((booking.NumberOfPeople * booking.Package.Price).ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("en-US")))</td>
                            <td>@booking.BookingDate.ToString("g")</td>
                            <td>@booking.PaymentOption</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@booking.Id" class="btn btn-sm btn-info">
                                    <i class="fa fa-eye"></i> View
                                </a>
                            </td>
                            <td>
                                @{
                                    var latestStatus = booking.Trackings
                                    .OrderByDescending(t => t.Id)
                                    .Select(t => t.Status)
                                    .FirstOrDefault() ?? "N/A";

                                    string badgeClass = latestStatus switch
                                    {
                                        "Pending" => "bg-warning text-dark",
                                        "Confirmed" => "bg-success",
                                        "Cancelled" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @badgeClass">@latestStatus</span>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
