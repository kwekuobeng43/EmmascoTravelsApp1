@{
}


@model EmmascoTravelsApp1.Models.Booking

<div class="container mt-5">
    <h2 class="mb-4 text-center">Booking Details</h2>

    <div class="card shadow-lg rounded-4">
        <div class="card-body">
            <h4><strong>Booking ID:</strong> #@Model.Id</h4>
            <p><strong>Customer Name:</strong> @Model.CustomerName</p>
            <p><strong>Email:</strong> @Model.CustomerEmail</p>
            <p><strong>Package:</strong> @Model.Package?.Name</p>
            <p><strong>Travel Date:</strong> @Model.TravelDate.ToString("d")</p>
            <p><strong>Arrival Date:</strong> @Model.ArrivalDate.ToString("d")</p>
            <p><strong>Number of People:</strong> @Model.NumberOfPeople</p>
            <p><strong>Total Price:</strong> @((Model.NumberOfPeople * Model.Package.Price).ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("en-US")))</p>

            <p><strong>Payment Option:</strong> @Model.PaymentOption</p>
        </div>

        <div class="card-footer text-center">
            <a asp-action="MyBookings" class="btn btn-secondary">Back to My Bookings</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                <button type="submit" class="btn btn-danger"
                        onclick="return confirm('Are you sure you want to delete this booking?');">
                    Delete
                </button>
            </form>


        </div>
    </div>
</div>

