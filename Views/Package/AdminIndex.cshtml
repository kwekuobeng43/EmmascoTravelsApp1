@model List<EmmascoTravelsApp1.Models.Package>
@{
   
    ViewData["Title"] = "Package Management";
}

<h2 class="mb-4 text-center text-warning">📦 Package Management</h2>

<div class="text-end mb-3">
    <a asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Add New Package
    </a>
</div>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark text-white">
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Country</th>
            <th>Duration</th>
            <th>Price</th>
            <th>Accommodation</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" width="60" height="40" class="rounded shadow-sm" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>@item.Name</td>
                <td>@item.Country</td>
                <td>@item.Duration</td>
                <td>@item.Price.ToString("C0", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</td>
                <td>@item.Accommodation</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" 
                       onclick="return confirm('Are you sure you want to delete this package?');">
                        <i class="bi bi-trash3"></i> Delete
                    </a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                        <i class="bi bi-eye"></i> View
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>


