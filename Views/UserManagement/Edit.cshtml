@model EmmascoTravelsApp1.Models.User

@{
    ViewData["Title"] = "Edit User";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center rounded-top">
                    <h2>Edit User</h2>
                </div>

                <div class="card-body p-4">
                    <form asp-controller="UserManagement"
                          asp-action="Edit"
                          method="post"
                          enctype="multipart/form-data"
                          autocomplete="off">
                        @Html.AntiForgeryToken()

                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- First Name -->
                        <div class="form-group mb-3">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <!-- Last Name -->
                        <div class="form-group mb-3">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <!-- Username -->
                        <div class="form-group mb-3">
                            <label asp-for="Username" class="form-label"></label>
                            <input asp-for="Username" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="form-group mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <!-- Password (read-only) -->
                        <div class="form-group mb-3">
                            <label for="Password" class="form-label">Password (Read-only)</label>
                            <input type="password" value="************" class="form-control" id="Password" readonly />
                        </div>

                        <!-- Phone Number -->
                        <div class="form-group mb-3">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" autocomplete="off" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>

                        <!-- Address -->
                        <div class="form-group mb-3">
                            <label asp-for="Address" class="form-label"></label>
                            <input asp-for="Address" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>

                        <!-- Profile Picture -->
                        <div class="form-group mb-3">
                            <label class="form-label">Profile Picture</label><br />
                            @if (Model.ProfilePicture != null)
                            {
                                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.ProfilePicture)"
                                     class="img-thumbnail mb-2"
                                     style="width:100px; height:100px;"
                                     alt="User Profile Picture" />
                            }
                            <input type="file" name="ProfileImage" class="form-control" />
                        </div>

                        <!-- Role -->
                        <div class="form-group mb-3">
                            <label asp-for="Role" class="form-label"></label>
                            <select asp-for="Role" class="form-control">
                                <option value="Admin" selected="@(Model.Role == "Admin")">Admin</option>
                                <option value="Standard User" selected="@(Model.Role == "Standard User")">Standard User</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>

                        <!-- Submit -->
                        <div class="form-group mt-4">
                            <input type="submit" value="Save Changes" class="btn btn-primary w-100" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}