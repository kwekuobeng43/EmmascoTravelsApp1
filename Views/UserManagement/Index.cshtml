








@model List<EmmascoTravelsApp1.Models.User>
@{
    
    ViewData["Title"] = "User Management";
}


<div class="container mt-5">
    <h2 class="mb-4" style="color: #3498db;">User Management</h2>
    <p>
        <a asp-action="Create" class="btn" style="background-color: #2ecc71; color: #fff;">Create New User</a>
    </p>
    <table class="table table-striped table-hover">
        <!----<thead style="background-color: #f1c40f; color: #fff;">-->
        <thead class="custom-thead">
         

            <tr>
                <th>Profile</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (item.ProfilePicture != null)
                        {
                            <img src="data:image;base64,@Convert.ToBase64String(item.ProfilePicture)" 
                                 width="40" height="40" class="rounded-circle" />
                        }
                        else
                        {
                            <span>No Pic</span>
                        }
                    </td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.Username</td>
                    <td>@item.Email</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Address</td>
                    <td>
                        @if (item.Role == "Admin")
                        {
                            <span style="background-color: #e74c3c; color: #fff; padding: 5px; border-radius: 5px;">@item.Role</span>
                        }
                        else
                        {
                            <span style="background-color: #9b59b6; color: #fff; padding: 5px; border-radius: 5px;">@item.Role</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm" style="background-color: #1abc9c; color: #fff;">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm" style="background-color: #c0392b; color: #fff;">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>









