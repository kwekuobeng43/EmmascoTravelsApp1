@{
}



@model IEnumerable<EmmascoTravelsApp1.Models.Tracking>


<div class="container mt-5">
    <h2 class="mb-4 text-center text-secondary">🚚 Tracking Management</h2>
    <!-- Create Button -->
    <div class="mb-3 text-end">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Add New Tracking
        </a>
    </div>
   

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            No tracking entries found.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover shadow-sm">
                <thead class="table-dark text-white">
                    <tr>
                        <th>Tracking ID</th>
                        <th>Booking ID</th>
                        <th>Customer Name</th>
                        <th>Package</th>
                        <th>Status</th>
                        <th>Updated On</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var track in Model)
                    {
                        <tr>
                            <td>#@track.Id</td>
                            <td>#@track.BookingId</td>
                            <td>@track.Booking.CustomerName</td>
                            <td>@track.Booking.Package?.Name</td>

                            <td>
                                @{
                                    string badgeClass = track.Status switch
                                    {
                                        "Pending" => "bg-warning text-dark",
                                        "Confirmed" => "bg-success",
                                        "Cancelled" => "bg-danger",
                                        _ => "bg-secondary"
                                    };
                                }
                                <span class="badge @badgeClass">@track.Status</span>
                            </td>
                            <td>@(track.Date.ToString("g"))</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@track.Id" class="btn btn-sm btn-info me-1">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <form asp-action="Delete" asp-route-id="@track.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger"
                                            onclick="return confirm('Are you sure you want to delete this tracking entry?');">
                                        <i class="bi bi-trash3"></i> Delete
                                    </button>
                                </form>
                                <a asp-action="Details" asp-route-id="@track.Id" class="btn btn-sm btn-primary">
                                    <i class="bi bi-eye"></i> View
                                </a>

                                <a asp-action="AdminDetails" asp-route-id="@track.Id" class="btn btn-sm btn-primary">
                                    <i class="bi bi-eye"></i> View
                                </a>

 

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
