@model EmmascoTravelsApp1.Models.Tracking
@{

    ViewData["Title"] = "Edit Tracking";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center text-secondary">✏️ Edit Tracking</h2>

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg rounded-4">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <!-- Booking Info -->
                        <h5 class="text-primary mb-3">Booking Information</h5>
                        <ul class="list-group list-group-flush mb-4">
                            <li class="list-group-item">
                                <strong>Booking ID:</strong> @Model.BookingId
                            </li>
                            <li class="list-group-item">
                                <strong>Customer Name:</strong> @(Model.Booking?.CustomerName ?? "N/A")
                            </li>
                            <li class="list-group-item">
                                <strong>Package:</strong> @(Model.Booking?.Package?.Name ?? "N/A")
                            </li>

                        </ul>

                        <!-- Status Dropdown -->
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label fw-bold">Status</label>
                            <select asp-for="Status" class="form-select" asp-items="new SelectList(ViewBag.StatusList, Model.Status)">
                                <option value="">-- Select Status --</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <a asp-action="AdminViewer" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Tracking List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}








