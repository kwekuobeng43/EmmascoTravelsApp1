@model EmmascoTravelsApp1.Models.Tracking
@{
   
    ViewData["Title"] = "Create Tracking";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center text-secondary">➕ Create Tracking</h2>

    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg rounded-4">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <!-- Booking Dropdown -->
                        <div class="mb-3">
                            <label asp-for="BookingId" class="form-label fw-bold">Booking</label>
                            <select asp-for="BookingId" class="form-select" asp-items="ViewBag.Bookings">
                                <option value="">-- Select Booking --</option>
                            </select>
                        </div>

                        <!-- Status Dropdown -->
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label fw-bold">Status</label>
                            <select asp-for="Status" class="form-select">
                                <option value="Pending">Pending</option>
                                <option value="Confirmed">Confirmed</option>
                                <option value="Cancelled">Cancelled</option>
                                <option value="Completed">Completed</option>
                            </select>
                        </div>

                        <!-- Submit Button -->
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-plus-circle"></i> Create Tracking
                            </button>
                        </div>
                    </form>

                    <div class="mt-3 text-center">
                        <a asp-action="AdminViewer" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left"></i> Back to Tracking List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

