@model EmmascoTravelsApp1.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}



<div class="container mt-5">
    <h2 class="mb-4 text-center fw-bold">📊 Admin Dashboard</h2>
    <div class="row g-4">

        <!-- Users -->
        <div class="col-md-3 col-6">
            <a class="text-decoration-none">
                <div class="card shadow-lg border-0 rounded-4 h-100 dashboard-card bg-gradient-primary text-white">
                    <div class="card-body text-center">
                        <i class="bi bi-people-fill fs-1 mb-3"></i>
                        <h5 class="card-title">Users</h5>
                        <h3 class="fw-bold">@Model.TotalUsers</h3>
                    </div>
                </div>
            </a>
        </div>



        <!-- Packages -->
        <div class="col-md-3 col-6">
            <a class="text-decoration-none">
                <div class="card shadow-lg border-0 rounded-4 h-100 dashboard-card bg-gradient-warning text-dark">
                    <div class="card-body text-center">
                        <i class="bi bi-box-seam fs-1 mb-3"></i>
                        <h5 class="card-title">Packages</h5>
                        <h3 class="fw-bold">@Model.TotalPackages</h3>
                    </div>
                </div>
            </a>
        </div>

        <!-- Bookings -->
        <div class="col-md-3 col-6">
            <a class="text-decoration-none">
                <div class="card shadow-lg border-0 rounded-4 h-100 dashboard-card bg-gradient-danger text-white">
                    <div class="card-body text-center">
                        <i class="bi bi-calendar-check-fill fs-1 mb-3"></i>
                        <h5 class="card-title">Bookings</h5>
                        <h3 class="fw-bold">@Model.TotalBookings</h3>
                    </div>
                </div>
            </a>
        </div>

        <!--Trackings-->
        <div class="col-md-3 col-6">
            <a class="text-decoration-none">
                <div class="card shadow-lg border-0 rounded-4 h-100 dashboard-card bg-gradient-success text-white">
                    <div class="card-body text-center">

                        <i class="bi bi-compass-fill fs-1 mb-3"></i>

                        <h5 class="card-title">Trackings</h5>
                        <h3 class="fw-bold">@Model.TotalTrackings</h3>
                    </div>
                </div>
            </a>
        </div>
    </div>


</div>

<div class="row mt-4 g-4 mb-lg-3">
    <!-- 🔹 User Management Shortcut (Black) -->
    <div class="col-md-4">
        <a asp-controller="UserManagement" asp-action="Index" class="text-decoration-none">
            <div class="card text-white bg-dark shadow rounded-4 h-100">
                <div class="card-body text-center py-4">
                    <i class="bi bi-people-fill fs-1 mb-3"></i>
                    <h4 class="fw-bold text-uppercase">User Management</h4>
                    <p class="mb-0">
                        <i class="bi bi-pencil-square"></i> Edit
                        <i class="bi bi-trash3"></i> Delete
                        <i class="bi bi-eye"></i> View
                    </p>
                </div>
            </div>
        </a>
    </div>

    <!-- 🔹 Customers Management Shortcut (Ash/Gray) -->
    <div class="col-md-4">
        <a asp-controller="Tracking" asp-action="AdminViewer" class="text-decoration-none">
            <div class="card text-white bg-secondary shadow rounded-4 h-100">
                <div class="card-body text-center py-4">
                    <i class="bi bi-person-badge-fill fs-1 mb-3"></i>
                    <h4 class="fw-bold text-uppercase">Tracking Management</h4>
                    <p class="mb-0">
                        <i class="bi bi-pencil-square"></i> Edit
                        <i class="bi bi-trash3"></i> Delete
                        <i class="bi bi-eye"></i> View
                    </p>
                </div>
            </div>
        </a>
    </div>




    <!-- 🔹 Booking Management Shortcut (Deep Orange) -->
    <div class="col-md-4">
        <a asp-controller="Booking" asp-action="MyBookings" class="text-decoration-none">
            <div class="card text-white shadow rounded-4 h-100" style="background-color: #FF5722;">
                <div class="card-body text-center py-4">
                    <i class="bi bi-calendar-check-fill fs-1 mb-3"></i>
                    <h4 class="fw-bold text-uppercase">Booking Management</h4>
                    <p class="mb-0">
                        <i class="bi bi-pencil-square"></i> Edit
                        <i class="bi bi-trash3"></i> Delete
                        <i class="bi bi-eye"></i> View
                    </p>
                </div>
            </div>
        </a>
    </div>

    <!-- 🔹 Package Management Shortcut (Deep Orange) -->
    <div class="col-md-4">
        <a asp-controller="Package" asp-action="AdminIndex" class="text-decoration-none">
            <div class="card text-white shadow rounded-4 h-100" style="background-color: mediumorchid;">
                <div class="card-body text-center py-4">
                    <i class="bi bi-box-seam-fill fs-1 mb-3"></i>
                    <h4 class="fw-bold text-uppercase">Package Management</h4>
                    <p class="mb-0">
                        <i class="bi bi-pencil-square"></i> Edit
                        <i class="bi bi-trash3"></i> Delete
                        <i class="bi bi-eye"></i> View
                    </p>
                </div>
            </div>
        </a>
    </div>

    <!-- 🔹 Feedback Management Shortcut -->
    <div class="col-md-4">
        <a asp-controller="Feedback" asp-action="ViewFeedbacks" class="text-decoration-none">
            <div class="card text-white shadow rounded-4 h-100" style="background-color: khaki;">
                <div class="card-body text-center py-4">
                    <i class="bi bi-chat-dots-fill fs-1 mb-3 text-white"></i>

                    <h4 class="fw-bold text-uppercase">Feedback Management</h4>
                    <p class="mb-0">
                        <i class="bi bi-pencil-square"></i> Edit
                        <i class="bi bi-trash3"></i> Delete
                        <i class="bi bi-eye"></i> View
                    </p>
                </div>
            </div>
        </a>
    </div>


   

   
</div>









<!-- Extra styling -->
<style>
    .dashboard-card {
        transition: transform 0.25s ease, box-shadow 0.25s ease;
    }

        .dashboard-card:hover {
            transform: translateY(-6px) scale(1.03);
            box-shadow: 0 12px 24px rgba(0,0,0,0.25);
            cursor: pointer; /* make it feel clickable */
        }

    .bg-gradient-primary {
        background: linear-gradient(135deg, #007bff, #004085);
    }

    .bg-gradient-success {
        background: linear-gradient(135deg, #28a745, #1c7430);
    }

    .bg-gradient-warning {
        background: linear-gradient(135deg, #ffc107, #d39e00);
    }

    .bg-gradient-danger {
        background: linear-gradient(135deg, #dc3545, #8b1a26);
    }

    .bg-gradient-dark {
        background: linear-gradient(135deg, #343a40, #1d2124);
    }
</style>

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">