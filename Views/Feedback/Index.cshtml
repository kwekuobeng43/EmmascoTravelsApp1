@model IEnumerable<EmmascoTravelsApp1.Models.Feedback>



<h2 class="mb-4 text-center text-dark">💬 Customer Feedback Management</h2>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">
        No feedback submitted yet.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover shadow-sm">
            <thead class="table-dark text-white">
                <tr>
                    <th>Feedback ID</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Message</th>
                    <th>Date Submitted</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var feedback in Model)
                {
                    <tr>
                        <td>#@feedback.Id</td>
                        <td>@feedback.Name</td>
                        <td>@feedback.Email</td>
                        <td>@feedback.Message</td>
                        <td>@feedback.Date.ToString("g")</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@feedback.Id" class="btn btn-sm btn-info me-1">
                                <i class="bi bi-eye"></i> View
                            </a>
                            <form asp-action="Delete" asp-route-id="@feedback.Id" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-sm btn-danger" 
                                        onclick="return confirm('Are you sure you want to delete this feedback?');">
                                    <i class="bi bi-trash3"></i> Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}





