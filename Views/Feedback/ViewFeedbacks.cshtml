@{
}
@model IEnumerable<EmmascoTravelsApp1.Models.Feedback>

@{
   
    ViewData["Title"] = "Feedback Management";
}


<div class="container mt-5">
    <h2 class="mb-4 fw-bold">📋 Manage Customer Feedback</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No feedback submitted yet.
        </div>
    }
    else
    {
        <table class="table table-dark table-striped table-hover shadow-sm">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Message</th>
                    <th>Date</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var feedback in Model)
                {
                    <tr>
                        <td>@feedback.Id</td>
                        <td>@feedback.Name</td>
                        <td>@feedback.Email</td>
                        <td>@feedback.Message</td>
                        <td>@feedback.Date.ToString("dd MMM yyyy")</td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@feedback.Id" class="btn btn-sm btn-info">
                                <i class="fa fa-eye"></i> View
                            </a>
                            
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
<script>
    setTimeout(function () {
        $(".alert").alert('close');
    }, 3000); // auto close after 3 sec
</script>







