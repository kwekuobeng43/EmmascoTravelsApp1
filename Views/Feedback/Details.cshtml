@{
}



@model EmmascoTravelsApp1.Models.Feedback

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-3">
        <div class="card-header bg-dark text-white">
            <h3 class="mb-0"><i class="fa fa-envelope-open"></i> Feedback Details</h3>
        </div>


        <div class="card-body">
            <p><strong>Name:</strong> @Model.Name</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Date:</strong> @Model.Date.ToString("dd MMM yyyy hh:mm tt")</p>
            <p><strong>Message:</strong></p>
            <div class="alert alert-secondary">
                @Model.Message
            </div>
        </div>

        <div class="card-footer d-flex justify-content-between">
            <a asp-action="ViewFeedbacks" class="btn btn-outline-dark">
                <i class="fa fa-arrow-left"></i> Back to List
            </a>
            <div>
                <a asp-action="Reply" asp-route-id="@Model.Id" class="btn btn-success">
                    <i class="fa fa-reply"></i> Reply
                </a>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline"
                      onsubmit="return confirm('Are you sure you want to delete this feedback?');">
                    <button type="submit" class="btn btn-danger">
                        <i class="fa fa-trash"></i> Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>


