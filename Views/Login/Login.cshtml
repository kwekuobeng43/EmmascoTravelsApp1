@model EmmascoTravelsApp1.Models.LoginModel

@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<h2 class="text-center mb-4">Welcome Back</h2>

<form asp-action="Login" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="Username" class="form-label">Username</label>
        <input asp-for="Username" class="form-control form-control-lg" placeholder="Enter your username">
        <span asp-validation-for="Username" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Enter your password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="d-grid mb-3">
        <input type="submit" value="Login" class="btn btn-info btn-lg">
    </div>

    <div class="text-center">
        <p>
            Don't have an account?
            <a class="text-success text-decoration-none" asp-controller="Registration" asp-action="Register">Register here</a>
        </p>
    </div>

   

</form>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
@if (TempData["LoginSuccess"] != null)
{
    <script>
        Swal.fire({
            title: 'Login Successful!',
            text: 'Welcome back!',
            icon: 'success',
            timer: 2000,
            showConfirmButton: false
        });
    </script>
}
else if (TempData["LoginError"] != null)
{
    <script>
        Swal.fire({
            title: 'Invalid Credentials',
            text: 'Please try again!',
            icon: 'error',
            timer: 2000,
            showConfirmButton: false
        });
    </script>
}